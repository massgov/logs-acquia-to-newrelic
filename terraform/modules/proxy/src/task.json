[
  {
    "name": "proxy",
    "image": "a5huynh/oauth2_proxy:2.2-debian",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 4180,
        "hostPort": 0
      }
    ],
    "command": [
      "--provider=github",
      "--client-id=${client_id}",
      "--client-secret=${client_secret}",
      "--cookie-secure=false",
      "--upstream=${origin}",
      "--http-address=0.0.0.0:4180",
      "--redirect-url=${base_path}/oauth2/callback",
      "--email-domain=*",
      "--cookie-secret=${cookie_secret}",
      "--pass-basic-auth=false",
      "--github-org=massgov"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${log_region}",
        "awslogs-stream-prefix": "oauth2_proxy"
      }
    },
    "memory": 128,
    "cpu": 256,
    "environment": [],
    "mountPoints": [],
    "volumesFrom": []
  }
]